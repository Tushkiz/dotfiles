[core]
	autocrlf = false
	editor = vim
	pager = less -FXR
    whitespace = trailing-space,space-before-tab
	excludesfile = /Users/tushkiz/.gitignore
[user]
	name = Tushar Sonawane
	email = tusharlsonawane@gmail.com
[color]
	ui = auto
	interactive = auto
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	untracked = cyan
[alias]
	# add
	a = !git add . && git status
    chunkyadd = add --patch                 # stage commits chunk by chunk

	# alias list
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort

	# authors list
	authors = "!git log --pretty=format:%aN | sort | uniq -c | sort -rn"
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"

	# branch
	b = branch -v                           # branch (verbose)

	# commit
	cm = commit -m						    # commit with message

	# checkout
    co = checkout           	    		# checkout
	nb = checkout -b               	  		# create and switch to a new branch

	# conflicted files list
	conflicted = grep --name-only --full-name '<<<<<<<'

	# diff
	d = diff					        	# diff unstaged changes
	dc = diff --cached				    	# diff staged changes
	last = diff HEAD^				    	# diff last committed changes

	# log
	l = log --stat --abbrev-commit
	ll = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short

	# reports for fun
	report = log --since='2 sunday ago' --until='now' --format='%C(yellow)%h %Cgreen%ad%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08%x08 %C(cyan)%aN %Creset%s' --no-merges

	# remote
	r = remote -v						# show remotes (verbose)

	# reset
	unstage = reset HEAD					# remove files from index (tracking)
	uncommit = reset --soft HEAD^
	filelog = log -u                  			# show changes to a file

	# stash
	stash-unapply = !git stash show -p | git apply -R

	# status
	s = status
	ss = status -s

	# svn helpers
	spull = svn rebase
	spush = svn dcommit
	srebase = svn rebase
	slog = svn log --oneline --show-commit
[advice]
	pushNonFastForward = false
	statusHints = true
[apply]
	whitespace = nowarn
[pull]
	rebase = true
[push]
	default = simple
[diff]
	mnemonicprefix = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[rerere]
	enabled = false
